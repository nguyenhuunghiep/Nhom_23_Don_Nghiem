/* Private variables ---------------------------------------------------------*/
I2C_HandleTypeDef hi2c1;

TIM_HandleTypeDef htim2;

UART_HandleTypeDef huart1;

/* USER CODE BEGIN PV */



char t[20]={'m','n'},k[20],m[20];
DHT_DataTypedef data;
int cycle=1;
int currentTime, lastTime=0;
int current_Time, last_Time=0;
int mode=1, para=1;
int flag=0,flag_1;

/* USER CODE END PV */

/* Private function prototypes -----------------------------------------------*/
void SystemClock_Config(void);
static void MX_GPIO_Init(void);
static void MX_I2C1_Init(void);
static void MX_TIM2_Init(void);
static void MX_USART1_UART_Init(void);
/* USER CODE BEGIN PFP */
void handler_string(char *p);
void get_data(char *p);
void display_mode_1(DHT_DataTypedef data);
void display_mode_2(int data_1, int para_1);
void display_cycle();
void transmit_data_from_computer();
/* USER CODE END PFP */


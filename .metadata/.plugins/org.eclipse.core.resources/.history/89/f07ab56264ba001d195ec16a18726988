/**
  * @brief GPIO Initialization Function
  * @param None
  * @retval None
  */
static void MX_GPIO_Init(void)
{
  GPIO_InitTypeDef GPIO_InitStruct = {0};

  /* GPIO Ports Clock Enable */
  __HAL_RCC_GPIOD_CLK_ENABLE();
  __HAL_RCC_GPIOA_CLK_ENABLE();
  __HAL_RCC_GPIOB_CLK_ENABLE();

  /*Configure GPIO pin Output Level */
  HAL_GPIO_WritePin(GPIOA, GPIO_PIN_1, GPIO_PIN_RESET);

  /*Configure GPIO pin : PA1 */
  GPIO_InitStruct.Pin = GPIO_PIN_1;
  GPIO_InitStruct.Mode = GPIO_MODE_OUTPUT_PP;
  GPIO_InitStruct.Pull = GPIO_NOPULL;
  GPIO_InitStruct.Speed = GPIO_SPEED_FREQ_LOW;
  HAL_GPIO_Init(GPIOA, &GPIO_InitStruct);

  /*Configure GPIO pin : PA2 */
  GPIO_InitStruct.Pin = GPIO_PIN_2;
  GPIO_InitStruct.Mode = GPIO_MODE_IT_FALLING;
  GPIO_InitStruct.Pull = GPIO_PULLUP;
  HAL_GPIO_Init(GPIOA, &GPIO_InitStruct);

  /* EXTI interrupt init*/
  HAL_NVIC_SetPriority(EXTI2_IRQn, 1, 0);
  HAL_NVIC_EnableIRQ(EXTI2_IRQn);

}

/* USER CODE BEGIN 4 */
void HAL_GPIO_EXTI_Callback(uint16_t GPIO_Pin)
{
    currentTime=HAL_GetTick();
    if(currentTime-lastTime>300)
	{
		cycle=cycle+1;
		flag=1;
	}
    lastTime=currentTime;

}
void HAL_UART_RxCpltCallback(UART_HandleTypeDef *huart)
{
	HAL_UART_Receive_IT(&huart1, (uint8_t*) &t[2], 18);
	strncpy(k,"",20);
	strncpy(k,&t[2],strlen(&t[2])-2);
	strncpy(t,"",20);
	flag=1;
}
void handler_string(char *p)
{
	flag_1=1;
	int m,n;
	m=strcmp(p,"mode 1 ");
	n=strcmp(p,"mode 2 ");
	if((m==0)&&(n!=0))
	{
		mode=1;
		strncpy(p,"",20);
	}
	if((m!=0)&&(n==0))
	{
		mode=2;
		strncpy(p,"",20);
	}

}
void get_data(char *p)
{
	int cycle_1, m, n;
	if(mode == 1)
	{
		cycle_1=atoi(p);
		if(cycle_1>0)
		{
			cycle=cycle_1;
		}
	}
	if(mode == 2)
	{
		m=strcmp(p,"nhiet do ");
		n=strcmp(p,"do am ");
		if((m==0)&&(n!=0))
		{
			para=1;
			strncpy(p,"",20);
		}
		if((m!=0)&&(n==0))
		{
			para=2;
			strncpy(p,"",20);
		}
	}
}

void display_mode_1(DHT_DataTypedef data)
{
	char row_1[16], row_2[16];

	lcd_put_cur(0,0);
	strcpy(row_1,"Mode:1");
	strcpy(&row_1[6]," Cycle:");
	sprintf(&row_1[13],"%d",cycle);
	lcd_send_string(row_1);

	lcd_put_cur(1,0);
	strcpy(row_2,"ND:");
	sprintf(&row_2[3],"%d",data.Temperature);
	strcpy(&row_2[5]," DA:");
	sprintf(&row_2[9],"%d",data.Humidity);
	lcd_send_string(row_2);
}
void display_mode_2(int data, int para)
{
	char row_2[5];
	lcd_clear();
	lcd_put_cur(0,0);
	lcd_send_string("Mode:2");
	if(para==1)
	{
		lcd_put_cur(1,0);
		strcpy(row_2,"ND:");
		sprintf(&row_2[3],"%d",data);
		lcd_send_string(row_2);
	}
	if(para==2)
	{
		lcd_put_cur(1,0);
		strcpy(row_2,"DA:");
		sprintf(&row_2[3],"%d",data);
		lcd_send_string(row_2);
	}
}
void display_cycle()
{
	if(mode==1)
	{
		if(cycle>9)
		{
			cycle=1;
		}
		char row_1[10];
		lcd_put_cur(0,6);
		strcpy(row_1," Cycle:");
		sprintf(&row_1[7],"%d",cycle);
		lcd_send_string(row_1);
	}
}
void transmit_data_from_computer()
{
	if(mode==1)
	{
		char row_2[24];
		strcpy(row_2,"Nhiet do:");
		sprintf(&row_2[10],"%d",data.Temperature);
		strcpy(&row_2[13]," Do am:");
		sprintf(&row_2[20],"%d",data.Humidity);
		HAL_UART_Transmit(&huart1,(uint8_t*)row_2,21,200);
	}
	if(mode==2)
	{
		if(para==1)
		{
			char row_2[13];
			strcpy(row_2,"Nhiet do:");
			sprintf(&row_2[9],"%d",data.Temperature);
			HAL_UART_Transmit(&huart1,(uint8_t*)row_2,11,100);
		}
		if(para==2)
		{
			char row_2[10];
			strcpy(row_2,"Do am:");
			sprintf(&row_2[6],"%d",data.Humidity);
			HAL_UART_Transmit(&huart1,(uint8_t*)row_2,8,100);
		}
	}
}
